<%- include('../_layouts/adminHeader') %>

<h2 class="page-title">Edit a Category</h2>

<a href="/admin/categories" class="btn btn-primary">Back to all categories</a>

<br><br>

<form action="/admin/categories/edit-category/<%= id %>" method="post">

  <div class="form-group">
    <label for="title">Title</label>
    <input id="title" class="form-control" type="text" name="title" value="<%= title %>" placeholder="Title">
  </div>

  <button class="btn btn-default">Submit</button>

</form>

<%- include('../_layouts/AdminFooter') %>